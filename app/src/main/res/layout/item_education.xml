<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/example_news"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tvDoneRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah Ditonton"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_medium"
                android:textSize="10sp"
                android:layout_alignParentEnd="true"
                android:paddingVertical="5dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/bg_done_watch"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cara Menghentikan Kecanduan Judi Online untuk Para Remaja"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/textPrimary"
            android:textSize="14sp"
            android:justificationMode="inter_word"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video ini menjelaskan cara menghentikan kecanduan judi online pada remaja dengan mengenali penyebab, dampak negatif, serta langkah-langkah sederhana yang dapat dilakukan untuk mengontrol diri dan membangun kebiasaan hidup yang lebih sehat."
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/textThirdtinary"
            android:textSize="10sp"
            android:layout_marginBottom="10dp"
            android:justificationMode="inter_word"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>