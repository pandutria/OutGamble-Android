<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".presentation.report.ReportsActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_left"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporkan Judi"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="@color/textPrimary"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/btnHistory"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_chating"
            android:padding="5dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/headerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:layout_below="@id/header"
        android:background="#939CBE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:src="@drawable/ic_report_high"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laporkan kegiatan, lokasi, atau link yang mencurigakan terkait perjudian supaya tim kami bisa menindaklanjuti dan membantu mencegah penyebaran judi di sekitar kamu."
            android:textAlignment="center"
            android:layout_marginHorizontal="25dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/textThirdtinary"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="50dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLocation"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:text="Laporkan Lokasi"
            android:backgroundTint="#400D7C66"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSites"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:text="Laporkan Situs"
            android:backgroundTint="@color/primary"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/white"/>
            

    </LinearLayout>


</RelativeLayout>