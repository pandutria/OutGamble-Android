<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".presentation.consultation.chating.ConsultationChatingActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_left"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Komunitas"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="@color/textPrimary"/>

    </RelativeLayout>

    <View
        android:id="@+id/headerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:layout_below="@id/header"
        android:background="#939CBE"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@id/header"
        android:layout_above="@id/layoutButton"
        android:paddingHorizontal="15dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/example_news"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemulihan Judi Online"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grup Dukungan Pemulihan Judi Online"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.3"
                android:layout_marginTop="15dp"
                android:layout_below="@id/header"
                android:background="#939CBE"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tentang Komunitas"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary"
                android:layout_marginTop="15dp"
                android:textSize="18sp"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pejuang Pemulihan adalah komunitas pendukung yang didedikasikan untuk membantu individu mengatasi kecanduan judi online. Kami menyediakan ruang aman untuk berbagi pengalaman, mencari saran, dan menemukan sumber daya untuk proses pemulihan. "
                android:justificationMode="inter_word"
                android:textColor="@color/textThirdtinary"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:lineSpacingExtra="2.5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peraturan"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/primary"
                android:layout_marginTop="10dp"
                android:textSize="18sp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_rule1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saling Mendukung"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/textPrimary"/>

                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_rule2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menjaga Kerahasiaan"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/textPrimary"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_rule3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dilarang Promosi"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/textPrimary"/>

            </LinearLayout>


            
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.3"
            android:layout_below="@id/header"
            android:background="#939CBE"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_55"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="12dp">

            <ProgressBar
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/primary"
                android:visibility="gone"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_55"
                android:backgroundTint="@color/primary"
                app:cornerRadius="@dimen/radius_16"
                android:text="Gabung"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/text_14"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>