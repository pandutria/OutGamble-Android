<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".presentation.consultation.chating.ConsultationChatingActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_left"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Edukasi"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="@color/textPrimary"/>

    </RelativeLayout>

    <View
        android:id="@+id/headerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.3"
        android:layout_below="@id/header"
        android:background="#939CBE"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLine"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/pvVideo"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                app:resize_mode="zoom"
                app:use_controller="true"
                app:show_buffering="when_playing"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="14sp"
                android:textColor="@color/textPrimary"
                android:lineSpacingExtra="2dp"
                android:justificationMode="inter_word"
                android:layout_marginTop="12dp"
                android:text="Bukan Hanya Adiksi yang Membuat Sulit Berhenti Judi ! | Research &amp; Explained"
                />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banyak orang berpikir bahwa alasan utama seseorang sulit berhenti dari judi hanyalah adiksi. Padahal kenyataannya, masalahnya jauh lebih kompleks dari itu. Judi tidak hanya mengikat seseorang secara biologis melalui dopamin, tetapi juga menjerat secara psikologis, emosional, sosial, bahkan ekonomi."
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:textSize="12sp"
                android:textColor="@color/textThirdtinary"
                android:lineSpacingExtra="2dp"/>

            <TextView
                android:id="@+id/tvSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source: Ferry Irwandi (Youtube)"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="10dp"
                android:textSize="10sp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>